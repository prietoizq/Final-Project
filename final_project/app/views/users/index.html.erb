<% if flash[:notice] %>
	<%= flash[:notice] %>
<% end %>

<div class="jumbotron">
    <h1>Users list</h1>
    <p class="lead">Lorem fistrum llevame al sircoo va ust√© muy cargadoo caballo blanco caballo negroorl por la gloria de mi madre pecador fistro de la pradera por la gloria de mi madre amatomaa.</p>
</div>


<ul>
	<% @users.each do |user| %>
		<% if user.role != 'admin' %>
			<div class="panel panel-success">
				<div class="panel-heading">
					<h3 class="panel-title"><%= link_to(user.name, user_path(user)) %></h3>
					
					<% if current_user && current_user.admin? %>
						<%= link_to("- Edit", edit_user_path(user)) %>
						<%= link_to("- Destroy", user_path(user), method: :delete,
						data: {confirm: "Are you sure?"}) %>
					<% end %>	
					<span class="pull-right clickable panel-collapsed"><i class="glyphicon glyphicon-chevron-down"></i></span>		
				</div>

				<div class="panel-body collapse">
					<% user.images.each do |image| %>
							<%= link_to image_tag(image.photo.url(:thumb)), user_image_path(user, image) %>
					<% end %>
				</div>
			</div>
		<% end %>
	<% end %>
</ul>

</div>
