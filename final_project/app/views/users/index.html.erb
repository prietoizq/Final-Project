<% if flash[:notice] %>
	<%= flash[:notice] %>
<% end %>

<h1> Users </h1>

<ul>
	<% @users.each do |user| %>
		<li><%= user.name %>
			<%= user.email %>
			<%= user.password %>
			<%= link_to("- Show", user_path(user)) %>
			<% if current_user && current_user.admin? %>
				<%= link_to("- Edit", edit_user_path(user)) %>
				<%= link_to("- Destroy", user_path(user), method: :delete,
				data: {confirm: "Are you sure?"}) %>
			<% end %>
		</li>
	<% end %>
</ul>

<%= link_to("New user", new_user_path) %>