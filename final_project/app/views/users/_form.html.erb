<div class="container col-md-4 col-md-offset-4 new-session">

        <h2 class="form-signin-heading">Create new user</h2>
        <%= form_for @user do |f| %> 
        <%= f.text_field :name, :placeholder => "Name", class: "form-control" %>
        <%= f.email_field :email, :placeholder => "Email", class: "form-control" %>
        <%= f.password_field :password, :placeholder => "Password", class: "form-control"%>
        
        <%= f.submit "SAVE", class: "btn btn-primary col-md-12" %>
        <br>
        <%= link_to("CANCEL", welcome_path, class: "btn btn-danger col-md-12") %>
      <% end %>

</div> 