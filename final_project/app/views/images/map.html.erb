  <script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({
      provider: {
        zoom : 14,
        mapTypeId : google.maps.MapTypeId.ROADMAP,
      },
      internal: {
        id: 'map'
      }
    },
    function(){
    	markers = handler.addMarkers(<%=raw @hash.to_json %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
    }
  );
  </script>

