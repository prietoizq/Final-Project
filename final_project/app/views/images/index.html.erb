<% if flash[:notice] %>
	<%= flash[:notice] %>
<% end %>

<h1><%= @user.name %></h1>
<ul>
	<% @images.each do |image| %>
		<li>
			<%= image.title %> 
			<%= image.theme %> 
			<%= image.description %>
			<%= image.likes %>
		</li>
	<% end %>
</ul>

<ul>
<%= link_to("users", users_path) %>
<%= link_to("New image", new_user_image_path(@user)) %>
</ul>
